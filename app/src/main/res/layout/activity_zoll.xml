<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="viewStart"
    tools:context=".ZollActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleplsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="Documentazione"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/viewPDFMattevi"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:text="Mattevi Denise Pdf"
            android:textAlignment="center"
            android:textSize="12sp"></Button>

        <Button
            android:id="@+id/viewPDFGuidaRapida"
            android:layout_width="151dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:text="Guida Rapida"
            android:textAlignment="center"
            android:textSize="12sp"></Button>
    </LinearLayout>
</ScrollView>